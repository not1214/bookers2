<div class="container">
  <div class="row">
    <div class="col-3">
        <h2>User info</h2>
        <table class="table">
          <tr><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback:"no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa" %></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>

    <div class="row">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block form-control-sm" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>
        <div class="form mb-3">
          <%= f.label :title %><br/>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form mb-3">
          <%= f.label :opinion %><br/>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form">
          <%= f.submit "Create Book", class:"btn btn-success" %>
        </div>
      <% end %>

    </div>