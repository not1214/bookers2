<%= render "books/list", {user: @user, book: @book} %>

<div class="col-8 offset-1">
  <h2>Book detail</h2>
  <table class="table">
    <% @user.each do |user| %>
    <tr>
      <td>
        <%= attachment_image_tag user.profile_image, :fill, 30, 30, fallback:"no_image.jpg" %><br/>
        <%= link_to user.name, user_path(user.id) %>
      </td>
      <td><%= link_to user.books.title, book_path(user.books.id) %></td>
      <td><%= user.books.body %></td>
      <% if user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(user.book.id), class:"btn btn-sm btn-success" %></td>
        <td><%= link_to "destroy", book_path(user.book.id), method: :delete, class:"btn btn-sm btn-danger" %></td>
      <% else %>
        <td colspan="3"></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>