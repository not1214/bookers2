<%= render "books/list", {user: @user, book: @newbook} %>

<div class="col-8 offset-1">
  <h2>Book detail</h2>
  <table class="table">
    <tr>
      <td>
        <%= attachment_image_tag @user.profile_image, :fill, 30, 30, format: "jpeg", fallback:"no_image.jpg" %><br/>
        <%= link_to @user.name, user_path(@user.id) %>
      </td>
      <td><%= link_to @book.title, book_path(@book) %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
        <td><%= link_to "destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %></td>
      <% else %>
        <td colspan="3"></td>
      <% end %>
    </tr>
  </table>
</div>