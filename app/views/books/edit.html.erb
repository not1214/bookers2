<div class="container">
  <div class="row">
    <div class="mx-auto col-5 px-3">

      <h1>Editing Book</h1>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form mb-3">
          <%= f.label :title %><br/>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form mb-3">
          <%= f.label :opinion %><br/>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form mb-3">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>

      <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>

    </div>
  </div>
</div>